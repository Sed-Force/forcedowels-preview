{
  "cleanUrls": true,
  "trailingSlash": false,

  "functions": {
    "api/**/*.js": { "runtime": "nodejs22.x" }
  },

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "no-store" }]
    },
    {
      "source": "/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=300" }]
    }
  ]
}
